
@{
    ViewBag.Title = "MyBasket";
}

@using Hunerli.Models
@model List<Products>

    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-heading">
                    <div class="main-text h2">
                        Sepetim

                    </div>
                    <div class="block-content-outer">
                        <div class="block-content-inner">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Tedarikçi</th>
                                        <th>Ürün Adı</th>
                                        <th>Stok</th>

                                        <th>Fiyatı</th>
                                        <th>Detay</th>
                                        <th>Sil</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Products u in Model)
                                    {
                                        <tr>
                                            <td>@u.SellerID</td>
                                            <td>@u.ProductName</td>
                                            <td>@u.ProductStocks</td>

                                            <td>@u.ProductCast</td>

                                            <td><a href="/Products/ProductsDetail?id=@u.ProductID&name=@u.ProductName" class="btn btn-primary  rounded">Detay</a></td>

                                            <td><a href="#" class="btn btn-danger  rounded productDlt" data-ajax="@u.ProductID">Sil</a></td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>