<body>
    <div class="container-fluid">
        <div id="header-container">
            <div class="header-bar navbar navbar-inverse navbar-fixed-top" role="navigation">
                <!-- NOTE TO READER: Accepts the following class(es) "navbar-fixed-top" class -->
                <div class="container">
                    <div class="navbar-header">
                        <div class="logo">
                            <span>
                                <img src="~/Content/img/ico/icons8-yarn-48.png" />
                                <strong style="color:white">HÜNERLI</strong>  
                            </span>
                        </div>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <div class="header-info">
                            <div class="header-profile">
                                <!-- NOTE TO READER: Accepts the following class(es) "animate" class -->
                                <ul class="header-profile-menu">
                                    <li>
                                        <a  class="top">
                                            <span class="header-profile-menu-icon">
                                                <img class="list-thumbnail" src="/Content/assets/images/required/profile/profile-pic-4.jpg" width="39" height="39" alt="profile-pic-4" />
                                            </span>
                                            <span class="main-menu-text">
                                                Hoşgeldiniz @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(User.Identity.Name);
                                                <i class="icon icon-arrow-down-bold-round icon-size-small"></i>
                                            </span>
                                        </a>
                                        <ul>

                                            <li>
                                                <a href="/Member/Logout">
                                                    <span aria-hidden="true" class="icon icon-arrow-curve-right"></span>
                                                    <span class="main-text">Çıkış Yap</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="header-profile">
                                <!-- NOTE TO READER: Accepts the following class(es) "animate" class -->
                                <ul class="header-profile-menu">
                                    <li>
                                        <a href="#" class="top">

                                            <img src="https://img.icons8.com/nolan/45/000000/shopping-basket-2.png">
                                            <span class="main-menu-text">

                                                @{
                                                    int adet = 0;
                                                    Basket b = new Basket();
                                                    if (Session["OnlineBasket"] != null)
                                                    {
                                                        b = (Basket)Session["OnlineBasket"];
                                                        adet = b.Products.Count;
                                                    }
                                                }  Sepetim (@adet)
                                                <i class="icon icon-arrow-down-bold-round icon-size-small"></i>
                                            </span>
                                        </a>
                                        <ul>
                                            @if (b.Products.Count>0)
                                            {
                                                foreach (Products p in b.Products)
                                                {
                                                    <li>
                                                        <a href="/Products/ProductsDetail?id=@p.ProductID">
                                                            <span aria-hidden="true" ></span>
                                                            <span class="main-text"> <img src="https://img.icons8.com/material-rounded/24/000000/sphere.png">@p.ProductName</span>
                                                        </a>
                                                    </li>


                                                } 
                                                <li>
                                <a href="/Home/MyBasket">
                                    <span aria-hidden="true" class="icon icon-arrow-curve-right"></span>
                                    <span class="main-text">Sepete Git</span>
                                </a>
                            </li>
                                            }



                                        </ul>
                                    </li>

                                </ul>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="body-container" >

            <div id="right-column">
                <div class="mainnav-horizontal-outer">
                    <div id="mainnav-horizontal-inner" class="fixed">
                        <!-- NOTE TO READER: Accepts the following class(es) "menu-text-only", "fixed" class -->
                        <div id="mainnav-horizontal">
                            <ul class="mainnav-horizontal">
                                <!-- NOTE TO READER: Accepts the following class(es) "animate" class -->
                                <li class="menu-item-top">
                                    <a href="/Home/Index" class="top">
                                        <span class="main-menu-icon">
                                            <span aria-hidden="true" class="icon icon-grid-big icon-size-medium"></span>
                                        </span>
                                        <span class="main-menu-text">Anasayfa</span>
                                    </a>
                                </li>
                                <li class="menu-item-top">
                                    <a href="/Products/Index" class="top">
                                        <span class="main-menu-icon">
                                            <span aria-hidden="true" class="icon icon-dollar icon-size-medium"></span>
                                        </span>
                                        <span class="main-menu-text">Ürünler</span>
                                    </a>

                                </li>
                                <li class="menu-item-top">
                                    <a href="/Users/Index" class="top">
                                        <span class="main-menu-icon">
                                            <span aria-hidden="true" class="icon icon-dollar icon-size-medium"></span>
                                        </span>
                                        <span class="main-menu-text">Kullanıcılar</span>
                                    </a>

                                </li>

                                <li class="menu-item-top">
                                    <a href="/Role/Index" class="top">
                                        <span class="main-menu-icon">
                                            <span aria-hidden="true" class="icon icon-dollar icon-size-medium"></span>
                                        </span>
                                        <span class="main-menu-text">Roller</span>
                                    </a>

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="right-column-content" >
               
              @RenderBody()

                </div>
                <div id="footer-container">
                    <div class="footer-content">
                        &copy; <a href="/Content/#?ref=Base5Builder">HÜNERLİ</a> was made with <span style="color:#FF0000;">&#10084;</span> and supported by - <a href="/Content/http://base5builder.com/" target="_blank" style="font-weight:300;color:#ffffff;background:#1d1d1d;padding:0 3px;">Base<span style="color:#ffa733;font-weight:bold">5</span>Builder</a>
                    </div>
                </div>
            </div>
        </div>
