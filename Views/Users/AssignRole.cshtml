
@{
    ViewBag.Title = "Rol Ata";
}


<div class="row">
    <div class="col-md-12">


        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Rol Ata
                </div>

            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Users/AssignRole" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kullanıcı Adı:</label>
                       <select name="UsersName" class="form-control">
                           @foreach (MembershipUser item in ViewBag.Users)
                           {
                               <option value="@item">@item.UserName</option>
                           }
                       </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Rol:</label>
                        <select name="RoleName">
                            @foreach (string item in ViewBag.Role)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>



    </div>

</div>

